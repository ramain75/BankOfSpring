<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="helloArticle" class="java.lang.String">
        <constructor-arg value="Sean"/>
    </bean>

    <!-- Get the autowired service -->
    <context:component-scan base-package="com.bankofspring.hello"/>
    
    <!-- Or we can manually create one -->
    <bean id="xmlSimpleHelloImpl" class="com.bankofspring.hello.SimpleHelloImpl">
        <property name="article" ref="helloArticle"/>
    </bean>
 
</beans>