<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Use annotation configuration -->
    <context:annotation-config />

    <!-- Load security -->
    <context:component-scan base-package="org.bankofspring.security" />
    
    <!-- Service layer -->
    <context:component-scan base-package="org.bankofspring.service" />

	<!-- Validator  -->
	<context:component-scan base-package="org.bankofspring.validator" />
	
</beans>
