<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="customerBean1" class="com.bankofspring.model.Customer">
		<constructor-arg value="TestCustomer1" />
		<constructor-arg value="testpass" />
		<constructor-arg value="Test Customer" />
		<constructor-arg value="123456789" />
	</bean>
	
    <bean id="customerBean2" class="com.bankofspring.model.Customer">
		<constructor-arg value="TestCustomer2" />
		<constructor-arg value="testpass" />
		<constructor-arg value="Test Customer2" />
		<constructor-arg value="123456799" />
	</bean>
	
    <bean id="customerBean3" class="com.bankofspring.model.Customer">
		<constructor-arg value="TestCustomer2" />
		<constructor-arg value="testpass" />
		<constructor-arg value="Test Customer2" />
		<constructor-arg value="123456999" />
	</bean>
	
    <bean id="account1" class="com.bankofspring.model.Account">
		<constructor-arg value="123456789" />
		<constructor-arg value="Standard Joint Current Account" />
		<constructor-arg />
			<list>
				<ref bean="customerBean1" />
				<ref bean="customerBean2" />
			</list>
		</constructor-arg>
	</bean>
	
 	<bean id="account2" class="com.bankofspring.model.Account">
		<constructor-arg value="12345999" />
		<constructor-arg value="Standard Current Account" />
		<constructor-arg />
			<list>
				<ref bean="customerBean3" />
			</list>
		</constructor-arg>
	</bean>
	
</beans>