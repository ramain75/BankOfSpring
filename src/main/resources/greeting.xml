<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">
		
	<bean id="helloWorld" class="com.bankofspring.hello.HelloWorldImpl" />
	
	<bean id="helloConstructor" class="com.bankofspring.hello.HelloWorldImpl">
		<constructor-arg name="greeting" value="Hello, All! This greeting was set by the constructor." />
	</bean>
	
	<bean id="helloProperty" class="com.bankofspring.hello.HelloWorldImpl">
		<property name="greeting" value="Hello, Everybody! This greeting was set by the setGreeting setter." />
	</bean>
</beans>